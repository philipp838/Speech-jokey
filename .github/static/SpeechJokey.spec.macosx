# -*- mode: python ; coding: utf-8 -*-

# Spec-File for Windows

#from kivy_deps import sdl2, glew
from kivymd import hooks_path as kivymd_hooks_path
from PyInstaller.utils.hooks import collect_dynamic_libs

app_name = 'SpeechJokey'

block_cipher = None

path = os.path.abspath(".")

a = Analysis(
    ['src/main.py'],
    pathex=[path],
    binaries=collect_dynamic_libs('azure.cognitiveservices.speech'),
    datas=[('fonts', 'fonts')],
    hiddenimports=['win32timezone', 'pkg_resources.extern', 'kivymd.icon_definitions', 'elevenlabs','gtts','openai','boto3','azure','azure.cognitiveservices','azure.cognitiveservices.speech'],
    hookspath=[kivymd_hooks_path],
    hooksconfig={},
    runtime_hooks=[],
    excludes=[],
    win_no_prefer_redirects=False,
    win_private_assemblies=False,
    cipher=block_cipher,
    noarchive=False,
)
pyz = PYZ(a.pure, a.zipped_data, cipher=block_cipher)

exe = EXE(
    pyz,
    a.scripts,
    [],
    exclude_binaries=True,
    name=app_name,
    debug=False,
    bootloader_ignore_signals=False,
    strip=False,
    upx=True,
    console=True,
    disable_windowed_traceback=False,
    argv_emulation=False,
    target_arch=None,
    codesign_identity=None,
    entitlements_file=None,
    icon=['speech-jokey.ico'],
)
coll = COLLECT(
    exe,
    Tree('src/'),
    a.scripts,
    a.binaries,
    a.zipfiles,
    a.datas,
    strip=False,
    upx=True,
    upx_exclude=[],
    name=app_name,
)
